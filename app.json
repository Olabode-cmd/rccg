{
  "expo": {
    "name": "rccg",
    "slug": "rccg",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/rccg.png",
    "scheme": "myapp",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/images/rccg.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff",
      "imageResizeMode": "contain"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSpeechRecognitionUsageDescription": "This app uses speech synthesis to read Bible verses aloud.",
        "NSMicrophoneUsageDescription": "This app uses the microphone for speech synthesis.",
        "NSUserTrackingUsageDescription": "This identifier will be used to deliver personalized ads to you.",
        "GADApplicationIdentifier": "ca-app-pub-3940256099942544~1458002511",
        "SKAdNetworkItems": [
          {
            "SKAdNetworkIdentifier": "cstr6suwn9.skadnetwork"
          }
        ]
      },
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-3940256099942544~1458002511"
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/rccg.png",
        "backgroundColor": "#ffffff"
      },
      "permissions": ["RECORD_AUDIO"],
      "package": "com.bodejr.rccg",
      "config": {
        "googleMobileAdsAppId": "ca-app-pub-3940256099942544~3347511713"
      }
    },
    "web": {
      "bundler": "metro",
      "output": "static",
      "favicon": "./assets/images/rccg.png"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/rccg.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "eas": {
        "projectId": "566fe771-97d5-41b7-9bae-65a1dddd247c"
      }
    }
  }
}
